local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")

local player = Players.LocalPlayer
local humanoid = nil
local jumping = false

-- Criar GUI para mostrar o texto RGB
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

local textLabel = Instance.new("TextLabel")
textLabel.Parent = screenGui
textLabel.Size = UDim2.new(1, 0, 0.1, 0)
textLabel.Position = UDim2.new(0, 0, 0.1, 0)
textLabel.Text = "H3X B4 PUNINDO OS IMPUROS"
textLabel.Font = Enum.Font.SourceSansBold
textLabel.TextScaled = true
textLabel.BackgroundTransparency = 1
textLabel.TextStrokeTransparency = 0
textLabel.TextStrokeColor3 = Color3.new(0, 0, 0)

-- Função para efeito RGB no texto
task.spawn(function()
    while true do
        for i = 0, 1, 0.01 do
            textLabel.TextColor3 = Color3.fromHSV(i, 1, 1)
            task.wait(0.05)
        end
    end
end)

-- Função para ativar/desativar o loop de pulo
local function toggleJump()
    humanoid = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
    if humanoid then
        jumping = not jumping
        while jumping do
            humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
            task.wait(0.3) -- Tempo entre pulos
        end
    end
end

-- Monitorar mensagens do chat
local function onChatMessage(message)
    if message == "!Ghost_33" then
        jumping = false
        screenGui:Destroy()
    elseif not jumping then
        toggleJump()
    end
end

-- Detectar mensagens no chat
local function onPlayerChatted(player, message)
    if player == Players.LocalPlayer then
        onChatMessage(message)
    end
end

Players.LocalPlayer.Chatted:Connect(onPlayerChatted)
