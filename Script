local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Parent = player:WaitForChild("PlayerGui")

local textLabel = Instance.new("TextLabel")
textLabel.Parent = gui
textLabel.Size = UDim2.new(1, 0, 0.2, 0) -- Ocupa 20% da tela
textLabel.Position = UDim2.new(0, 0, 0.4, 0) -- Centralizado verticalmente
textLabel.BackgroundTransparency = 1 -- Sem fundo
textLabel.Text = "TEAM HK INVADED"
textLabel.TextColor3 = Color3.new(1, 0, 0) -- Texto vermelho
textLabel.TextScaled = true
textLabel.Font = Enum.Font.GothamBlack

-- Remover ao reiniciar
player.CharacterAdded:Connect(function()
    gui:Destroy()
end)
